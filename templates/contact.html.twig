{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('home') }}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}
{% block content %}
    <div class="full-border-top"></div>
    <div class="supercontainer">

        <div id="me_section" class="me-section">
            <div class="row-left">
                <div class="name">
                    <p>Angel</p>
                    <p>Rion -</p>
                    <p>Cervi</p>
                </div>
                <div class="profession">
                    <p>Web developer</p>
                    <p>PHP / JS</p>
                </div>
                <div class="icons-contact">
                    <div class="github-icon">
                        <img class="github-icon" src="images/specs/github.svg" alt="github icon">
                    </div>
                    <div class="gitlab-icon">
                        <img class="github-icon" src="images/specs/gitlab.svg" alt="gitlab icon">
                    </div>
                    <div class="linkedin-icon">
                        <img class="linkedin-icon" src="images/specs/linkedin.svg" alt="linkedin icon">
                    </div>
                </div>
            </div>
            <div class="row-middle">
                <div class="border-skew"></div>
                <div class="career-lines">
                    <div class="line">
                        <div class="bar bar1"><p>About Me&nbsp</p></div>
                    </div>
                    <div class="line">
                        <div class="bar bar2"><p>Projects&nbsp</p></div>
                    </div>
                    <div class="line">
                        <div class="bar bar3"><p>Skills&nbsp</p></div>
                    </div>
                    <div class="line">
                        <div class="bar bar4 bar-active"></div>
                    </div>
                </div>
            </div>
            <div class="row-right">
                <div class="right-dots-container">
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                    <div class="right-dot"></div>
                </div>
                <div class="contact-right-content">
                    <div class="contact-title">
                        {% if messaged %}
                            <h1>I've received your message ! Replying soon !</h1>
                        {% else %}
                            <h1>Feel free to contact me for work<br>or just to chat!</h1>
                        {% endif %}
                    </div>
                    {{ form_start(form) }}
                    <div class="msg-container">
                        {{ form_widget(form.email, {'attr': {'class': 'email-input'}}) }}
                        <div class="text-area-container">
                            {{ form_widget(form.message, {'attr': {'class': 'msg-textarea'}}) }}
                            <div class="textarea-border-left"></div>
                            <div class="textarea-border-bottom"></div>
                            <div class="textarea-border-right"></div>
                        </div>

                    </div>
                    <div class="contact-bottom">
                        <div class="contact-bottom-dots-container">
                            <div class="contact-dot-1"></div>
                            <div class="contact-dot-2"></div>
                            <div class="contact-dot-3"></div>
                            <div class="contact-dot-4"></div>
                            <div class="contact-dot-5">
                                <div class="circle">
                                    <div class="dot"></div>
                                    <div class="small-line-1"></div>
                                    <div class="small-line-2"></div>
                                    <button type="submit" class="send-button">Send</button>
                                </div>
                            </div>
                            <div class="contact-dot-6">
                                <div class="small-line"></div>
                            </div>
                            <div class="contact-dot-7"></div>
                            <div class="contact-dot-8"></div>
                        </div>
                        <div class="small-line"></div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('contactjs') }}
{% endblock %}
