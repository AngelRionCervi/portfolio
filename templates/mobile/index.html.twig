{% endblock %}
{% block content %}
    <div class="supercontainer">
        <div class="home-section">
            <canvas class="canvas canvas-mobile"></canvas>
            <div class="home-container">
                <div class="name-pro">
                    <div class="name">
                        <p>Angel</p>
                        <p>Rion -</p>
                        <p>Cervi</p>
                    </div>
                    <div class="pro">
                        <p>Fullstack</p>
                        <p>web developer</p>
                    </div>
                </div>
                <div class="welcome-msg">
                    <div class="welcome-text">
                        <p>Welcome</p>
                    </div>
                    <div class="welcome-text">
                        <p>to</p>
                    </div>
                    <div class="welcome-text">
                        <p>my</p>
                    </div>
                    <div class="welcome-text">
                        <p>portfolio</p>
                    </div>
                </div>
                <div class="icons-contact">
                    <a class="github-icon" href="https://github.com/AngelRionCervi">
                        <img class="github-icon" src="images/specs/github-inverted.svg" alt="github icon">
                    </a>
                    <a class="gitlab-icon" href="https://gitlab.com/AngelRionCervi">
                        <img class="github-icon" src="images/specs/gitlab-inverted.svg" alt="gitlab icon">
                    </a>
                    <a class="linkedin-icon" href="https://www.linkedin.com/in/angel-rion-cervi">
                        <img class="linkedin-icon" src="images/specs/linkedin-inverted.svg" alt="linkedin icon">
                    </a>
                </div>
            </div>
            <div class="about-me-container">
                <div class="h1-container">
                    <h1>About Me</h1>
                </div>
                <div class="quote-container">
                    <p class="quote">"Who?"</p>
                </div>
                <div class="weird-geom-container">
                    <div class="double-circle-container">
                        <div class="lil-dot"></div>
                        <div class="big-dot">
                            <div class="small-line"></div>
                        </div>
                    </div>
                    <div class="photo-container">
                        <div class="hexagon-part">
                            <div class="hexagon-shape"></div>
                        </div>
                    </div>
                </div>
                <div class="text-container">
                    <p>Hi, My name is Angel Rion-Cervi, I'm a web-developper currently based in Orl√©ans, France. I work
                        mainly with JavaScript and PHP and a few frameworks.<br>I like video-games, music and css grid.
                        <br> Feel free to contact me !</p>
                </div>
            </div>
            <div class="skill-section">
                <div class="h1-container">
                    <div class="h1-bar"></div>
                    <h1>Skills</h1>
                </div>
                <div class="skill-specs-container">
                    <div class="skill-specs-grid">
                        <div class="skill-spec">
                            <div class="spec-text"><p>HTML</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>CSS</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>Sass</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p></p></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>JavaScript</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>jQuery</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>VueJS</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>ReactJS</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>PHP</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>Symfony</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p></p></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p></p></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>SQL</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p>MySQL</p></div>
                            <div class="spec-underline"></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p></p></div>
                        </div>
                        <div class="skill-spec">
                            <div class="spec-text"><p></p></div>
                        </div>
                    </div>
                </div>
                <div class="skills-grid-container">
                    <div class="fast-skill h-skill">
                        <div class="h-skill-text">
                            <p>
                               I focused on building fast websites and applications thanks to the latest JS frameworks and Symfony backend apis.
                            </p>
                        </div>
                        <div class="h-skill-logo">
                            <div class="hexagon-skill-part">
                                <div class="hexagon-skill-shape"></div>
                            </div>
                            <img class="skill-icon" src="images/specs/racing.svg" alt="github icon">
                        </div>
                    </div>
                    <div class="skill-rounds">
                        <div class="top-circle-1"></div>
                        <div class="top-circle-2"></div>
                    </div>
                    <div class="multi-skill h-skill">
                        <div class="h-skill-text">
                            <p>
                                I love tech ! Learning new things allows me to be more flexible and able to use the right tech for the right job.
                            </p>
                        </div>
                        <div class="h-skill-logo">
                            <div class="hexagon-skill-part">
                                <div class="hexagon-skill-shape">
                                </div>
                            </div>
                            <img class="skill-icon" src="images/specs/links.svg" alt="github icon">
                        </div>
                    </div>
                    <div class="skill-rounds">
                        <div class="bottom-circle-1"></div>
                        <div class="bottom-circle-2"></div>
                    </div>
                    <div class="team-skill h-skill">
                        <div class="h-skill-text">
                            <p>
                                Coding is about teamwork ! Working efficiently as a team is one of my main goals.
                            </p>
                        </div>
                        <div class="h-skill-logo">
                            <div class="hexagon-skill-part">
                                <div class="hexagon-skill-shape">
                                </div>
                            </div>
                            <img class="skill-icon" src="images/specs/teamwork.svg" alt="github icon">
                        </div>
                    </div>
                </div>
            </div>
            <div class="project-section">
                <div class="h1-container">
                    <div class="h1-bar"></div>
                    <h1 class="more-h1-margin">Projects</h1>
                </div>
                <div class="project-grid">
                    {% for project in projects %}
                        <div class="project-item">
                            <a id="demo_{{ loop.index }}" class="project-item-link" href="#projmod_{{ loop.index }}">
                                <div class="background-dot"></div>
                                <img class="project-image" src="images/{{ project.images[0] }}"
                                     alt="project thumbnail">
                                <div class="project-title"><p>{{ project.title }}</p></div>
                            </a>
                        </div>
                        <div class="rest-images display-none">
                            {% for image in project.images %}
                                {{ image }}
                            {% endfor %}
                        </div>
                        <div id="projmod_{{ loop.index }}" class="project-modal">
                            <div class="modal-content">
                                <div class="images-container">
                                    <div class="github-banner">
                                       <a href="#" class="github-project-link">
                                           <img class="github-project-logo" src="/images/specs/github-inverted.svg" alt="github logo">
                                       </a>
                                    </div>
                                    <div class="image-transition-cover image-transition-cover_{{ loop.index }}"></div>
                                    <img class="project-content-image project-content-image_{{ loop.index }}" src="images/{{ project.images[0] }}"
                                         alt="project images">
                                </div>
                                <div class="title-nav">
                                    <div class="project-title-container">
                                        <p>{{ project.title }}</p>
                                    </div>
                                    <div class="navigation-container">
                                        <div class="left-right">
                                            <div class="chevron-left_{{ loop.index }} arrow-project">
                                                <img class="chevron-mobile" src="images/nav/chev-left.svg"
                                                     alt="chevron left">
                                            </div>
                                            <div class="chevron-right_{{ loop.index }} arrow-project">
                                                <img class="chevron-mobile" src="images/nav/chev-right.svg"
                                                     alt="chevron right">
                                            </div>
                                        </div>
                                        <div class="corner-triangle"></div>
                                    </div>
                                </div>
                                <div class="description-specs-container">
                                    <div class="project-description">
                                        <p>{{ project.description }}</p>
                                    </div>
                                    <div class="project-specs">
                                        {% for spec in project.specs %}
                                            <img class="project-spec" src="images/specs/{{ spec }}" alt="project specifications">
                                        {% endfor %}
                                    </div>
                                    <div class="close-modal close-projmod_{{ loop.index }}">
                                        <img class="cross-remove-modal" src="images/nav/cross.svg" alt="cross remove modal">
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="contact-section">
                <div class="h1-container">
                    <div class="h1-bar"></div>
                    <h1 class="more-h1-margin">Contact</h1>
                </div>
                <div class="contact-right-content">
                    <div class="contact-title">
                        {% if messaged %}
                            <h1>I've received your message ! Replying soon !</h1>
                        {% else %}
                            <h1>Feel free to contact me for work<br>or just to chat!</h1>
                        {% endif %}
                    </div>
                    {{ form_start(form) }}
                    <div class="msg-container">
                        {{ form_widget(form.email, {'attr': {'class': 'email-input'}}) }}
                        <div class="text-area-container">
                            {{ form_widget(form.message, {'attr': {'class': 'msg-textarea'}}) }}
                            <div class="textarea-border-left"></div>
                            <div class="textarea-border-bottom"></div>
                            <div class="textarea-border-right"></div>
                        </div>

                    </div>
                    <div class="contact-bottom">
                        <div class="contact-bottom-dots-container">
                            <div class="contact-dot-1"></div>
                            <div class="contact-dot-2"></div>
                            <div class="contact-dot-3"></div>
                            <div class="contact-dot-4"></div>
                            <div class="contact-dot-5">
                                <button type="submit" class="send-button">Send</button>
                            </div>
                            <div class="contact-dot-6">
                                <div class="small-line"></div>
                            </div>
                            <div class="contact-dot-7"></div>
                            <div class="contact-dot-8"></div>
                        </div>
                        <div class="small-line"></div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="biggest-footer-ever">
                <p>Angel Rion - Cervi ¬©2019</p>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('shootingStar') }}
    {{ encore_entry_script_tags('animatedModal') }}
    {{ encore_entry_script_tags('mobileProjects') }}
{% endblock %}
